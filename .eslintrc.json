{
  "extends": "semistandard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "env": {
    "es6": true,
    "node": false,
    "browser": true
  },
  "rules": {
    "block-scoped-var": "error",
    "no-use-before-define": "error",
    "no-var": "off",
    "no-shadow": [ "error", { "hoist": "all" } ]
  }
}
